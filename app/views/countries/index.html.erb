<h1>All Countries</h1>

<% flash.each do |name, message| %>
  <%= content_tag :div, message %>
<% end %>

<ul>
  <% @countries.each do |country| %>
    <li>
      <%= link_to country.name, country_path(country) %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to 'Create a New Country', new_country_path %>