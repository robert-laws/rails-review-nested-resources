<h1>All Cities</h1>

<% flash.each do |name, message| %>
  <%= content_tag :div, message %>
<% end %>

<ul>
  <% @cities.each do |city| %>
    <li>
      <%= link_to city.name, country_city_path(city.country, city) %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to 'Create a New City', new_city_path %>